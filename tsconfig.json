{
   "compileOnSave": false,
   "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": ["es5", "es6"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": true,
      "typeRoots": [
         "./node_modules/@types",
         "./node_modules/telegraf/typings",
         "./node_modules/telegram-typings"
       ]
   },
   "include": [
       "./src/**/*"
   ],
   "exclude": [
       "node_modules",
       "**/*.spec.ts"
   ]
 }